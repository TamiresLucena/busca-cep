{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger Busca CEP",
    "description": "API para obter endereço completo a partir de um CEP."
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Saúde",
      "description": "Endpoints relacionados a saúde da aplicação;"
    },
    {
      "name": "Autenticação",
      "description": "Endpoints relacionado a autenticação do usuário;"
    },
    {
      "name": "Endereços",
      "description": "Endpoints relacionados a endereços;"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authorization",
      "description": "Insira seu token para garantir acesso aos endpoints"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/health/health": {
      "get": {
        "tags": [
          "Saúde"
        ],
        "summary": "Saúde da aplicação",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Servidor ativo!",
            "schema": {
              "$ref": "#/definitions/Saude"
            }
          },
          "400": {
            "description": "Desculpe, tivemos um problema com a requisição"
          },
          "401": {
            "description": "Não autorizado"
          },
          "404": {
            "description": "Não encontrado"
          }
        }
      }
    },
    "/authentication/authenticate": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Autenticação do usuário",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Login e senha do usuário",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AutenticacaoBody"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário autorizado",
            "schema": {
              "$ref": "#/definitions/Autenticacao"
            }
          },
          "400": {
            "description": "Desculpe, tivemos um problema com a requisição"
          },
          "401": {
            "description": "Não autorizado"
          },
          "404": {
            "description": "Não encontrado"
          }
        }
      }
    },
    "/addresses/address": {
      "get": {
        "tags": [
          "Endereços"
        ],
        "summary": "Busca CEP",
        "parameters": [
          {
            "in": "query",
            "type": "string",
            "name": "zip_code",
            "description": "Cep que deseja buscar o endereço",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Endereço encontrado",
            "schema": {
              "$ref": "#/definitions/Enderecos"
            }
          },
          "400": {
            "description": "Desculpe, tivemos um problema com a requisição"
          },
          "401": {
            "description": "Não autorizado"
          },
          "404": {
            "description": "Não encontrado"
          }
        }
      }
    }
  },
  "definitions": {
    "Saude": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Servidor ativo!"
        },
        "date": {
          "type": "string",
          "example": "2021-11-11T01:21:33.983Z"
        },
        "uptime": {
          "type": "number",
          "example": 0.05644
        }
      }
    },
    "Enderecos": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "zip_code": {
          "type": "string",
          "example": "12232883"
        },
        "location": {
          "type": "string",
          "example": "Gentil Raymundo da Silva"
        },
        "district": {
          "type": "string",
          "example": "Dom Pedro II"
        },
        "city": {
          "type": "string",
          "example": "São José dos Campos"
        },
        "state": {
          "type": "string",
          "example": "São Paulo"
        }
      }
    },
    "Autenticacao": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...0B6_xZmjGCgu54s"
        }
      }
    },
    "AutenticacaoBody": {
      "type": "object",
      "properties": {
        "login": {
          "type": "string",
          "example": "tlucena"
        },
        "password": {
          "type": "string",
          "example": "Lu1z@"
        }
      }
    }
  }
}